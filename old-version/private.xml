<root>
  <item>
    <name>NICOLA layout on Dvorak for ErgoDox</name>
    <include path="includes/ergodox.xml">
      <!-- 親指シフトキー -->
      <replacementdef>
        <replacementname>LEFT_THUMB</replacementname>
        <replacementvalue>KeyCode::JIS_UNDERSCORE</replacementvalue>
      </replacementdef>
      <replacementdef>
        <replacementname>RIGHT_THUMB</replacementname>
        <replacementvalue>KeyCode::JIS_YEN</replacementvalue>
      </replacementdef>
    </include>
  </item>
  <item>
    <name>NICOLA layout on Dvorak for HHKB Professional JP</name>
    <include path="includes/hhkbprojp.xml">
      <!-- 親指シフトキー -->
      <replacementdef>
        <replacementname>LEFT_THUMB</replacementname>
        <replacementvalue>KeyCode::JIS_EISUU</replacementvalue>
      </replacementdef>
      <replacementdef>
        <replacementname>RIGHT_THUMB</replacementname>
        <replacementvalue>KeyCode::JIS_KANA</replacementvalue>
      </replacementdef>
    </include>
  </item>
</root>
